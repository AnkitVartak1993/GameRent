@model GamesRent.Models.Game
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>
@using (Html.BeginForm("Save","Games"))
{

<div class="form-group">
    @Html.LabelFor(m=>m.Name)
    @Html.TextBoxFor(m=>m.Name, new {@class="form-control"})
    @Html.ValidationMessageFor(m=>m.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m=>m.Genre)
    @Html.TextBoxFor(m=>m.Genre, new {@class="form-control"})
    @Html.ValidationMessageFor(m=>m.Genre)
</div>
<div class="form-group">
    @Html.LabelFor(m=>m.GameAdded)
    @Html.TextBoxFor(m=>m.GameAdded,"{0:d MMM yyyy}", new {@class="form-control"})
    @Html.ValidationMessageFor(m=>m.GameAdded)
</div>
<div class="form-group">
    @Html.LabelFor(m=>m.ReleaseDate)
    @Html.TextBoxFor(m=>m.ReleaseDate,"{0:d MMM yyyy}", new {@class="form-control"})
    @Html.ValidationMessageFor(m=>m.ReleaseDate)
</div>
<div class="form-group">
    @Html.LabelFor(m=>m.InStock)
    @Html.TextBoxFor(m=>m.InStock, new {@class="form-control"})
    @Html.ValidationMessageFor(m=>m.InStock)
</div>
@Html.HiddenFor(m=>m.Id)
@Html.AntiForgeryToken()
<button type="submit" class="btn btn-primary">Save</button>


}

@section scripts{
    Scripts.Render(""~/bundles/jqueryval"")

}




